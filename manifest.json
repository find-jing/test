{
  "manifest_version": 3,
  "name": "看看下班没",
  "version": "1.0",
  "description": "倒计时下班时间，计算工资进度",
  "permissions": ["storage"],
  "host_permissions": [],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "web_accessible_resources": [{
    "resources": ["*.css"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
} 